# File to save headlines
file_name = "fake_news.txt"

while True:
    print("\nOptions:")
    print("1. Generate random headline from category")
    print("2. Create personalized headline with your input")
    print("3. Exit")

    choice = input("Choose an option (1/2/3): ").strip()

    if choice == "3":
        break

    if choice == "1":
        # Show categories
        print("\nAvailable categories:")
        for cat in categories.keys():
            
            print("-", cat.capitalize())

        category = input("Choose a category: ").strip().lower()

        if category not in categories:
            print("‚ùå Invalid category! Please choose again.")
            continue

        # Generate headline
        subjects = random.choice(categories[category]["subjects"])
        actions = random.choice(categories[category]["actions"])
        places = random.choice(categories[category]["places"])
        
        headline = f"BREAKING NEWS: {subjects} {actions} {places}"

    elif choice == "2":
        # Personalized headline
        subject = input("Enter a name/person/profession (example: Vini, Teacher, Dog): ").strip()
        action = input("Enter an action (or press Enter for random): ").strip()
        place = input("Enter a place/thing (or press Enter for random): ").strip()

        # Random fallback if not entered
        if not action:
            action = random.choice(random.choice(list(categories.values()))["actions"])
        if not place:
            place = random.choice(random.choice(list(categories.values()))["places"])

        headline = f"BREAKING NEWS: {subject} {action} {place}"

    else:
        print("‚ùå Invalid option! Try again.")
        continue

    # Print headline
    print("\nüì∞ " + headline)

    # Ask if user wants to save
    save_choice = input("Do you want to save this headline? (yes/no): ").strip().lower()
    if save_choice == "yes":
        with open(file_name, "a") as f:
            f.write(headline + "\n")
        print(f"‚úÖ Headline saved to {file_name}")
 
